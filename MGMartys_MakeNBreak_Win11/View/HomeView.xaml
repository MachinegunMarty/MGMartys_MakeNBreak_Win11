<UserControl x:Class="MGMartys_MakeNBreak_Win11.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodel="clr-namespace:MGMartys_MakeNBreak_Win11.ViewModel"
             d:DataContext="{d:DesignInstance Type={x:Type viewmodel:HomeViewModel}}"
             mc:Ignorable="d" 
             d:DesignWidth="1070"
             d:DesignHeight="630"
             >


    <UserControl.Style>
        <Style>
            <Style.Triggers>
                <EventTrigger RoutedEvent="UserControl.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0.0"
                                             To="1.0"
                                             Duration="0:0:0.5" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Style>

    <StackPanel Name="Home_Page" Background="#000000">

        
        <StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
                <TextBlock  Text="Welcome to my Windows 11 tweak program "   
                            FontSize="24"
                            FontWeight="DemiBold"
                            FontFamily="/Fonts/OpenSans-Regular.ttf #Open Sans Regular"
                            Foreground="#DDDDDD"
                            Margin="25"
                            />
            </StackPanel>
        </StackPanel>

        <StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                <TextBlock FontSize="18" FontFamily="/Fonts/OpenSans-Regular.ttf #Open Sans Regular" Foreground="#DDDDDD" Margin="5">
                This program allows you to tweak your Windows 11 install  <LineBreak/>
                You can set the tweaks by checking the buttons, if you uncheck the buttons the default value will be set back.<LineBreak/>
                So if you don't like something, you can set it back to default <LineBreak/> <LineBreak/>
                    I split the "Control Panel" and the new "Settings Panel" into tabbed pages with the original location<LineBreak/>
                    I also added pages to disable "Services", uninstall 'Windows Apps' and to 'Install Software'
                </TextBlock>
                
            </StackPanel>
        </StackPanel>
    </StackPanel>

</UserControl>
