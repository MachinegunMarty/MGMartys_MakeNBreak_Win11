<UserControl x:Class="MGMartys_MakeNBreak_Win11.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MGMartys_MakeNBreak_Win11.View"
             xmlns:viewmodel="clr-namespace:MGMartys_MakeNBreak_Win11.ViewModel"
             d:DataContext="{d:DesignInstance Type={x:Type viewmodel:SettingsViewModel}}"
             mc:Ignorable="d" 
             d:DesignWidth="1070"
             d:DesignHeight="730">
    
    
    <UserControl.Style>
        <Style>
            <Style.Triggers>
                <EventTrigger RoutedEvent="UserControl.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0.0"
                                             To="1.0"
                                             Duration="0:0:0.5" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
        </UserControl.Style>

        <Grid>

            <Grid Background="#000000">
                <TabControl Background="#000000" BorderThickness="0" Margin="1,1,1,1">

<!--#region Tab: System -->

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal" >
                                <Image Source="/Resources/Icons/Desktop_Icon.png" Height="20" Width="20" Margin="0,0,5,0"/>
                                <TextBlock Text="System" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </TabItem.Header>



                        <TabItem.Content>
                            
                            <Border BorderBrush="#00FF00" BorderThickness="0,0,0,0">
                                <WrapPanel Name="Notifications_Content" VerticalAlignment="Center" HorizontalAlignment="Center">

                                <Border Name="SystemNotifications_Border" BorderThickness="1" BorderBrush="Lime" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="4">
                                    <StackPanel Name="SystemNotifications_Header" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Label Name="SystemNotifications_Label" Content="Notifications" HorizontalContentAlignment="Center" Foreground="Lime" Background="#190533" FontWeight="Bold" BorderThickness="1"/>
                                        <StackPanel Name="SystemNotifications_Content" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="Auto" Margin="5">
                                                <StackPanel Margin="5">
                                                <CheckBox Content="Turn 'Get Notifications from Apps and other senders' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxSystemNotificationsGetNotificationsFromAppsAndOtherSendersOff}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                <CheckBox Content="Turn 'Allow notifcations to play sounds' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxSystemNotificationsAllowNotificationsToPlaySoundsOff}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                <CheckBox Content="Turn 'Show notifications on the lock screen' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxSystemNotificationsShowNotificationsOnTheLockScreenOff}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                <CheckBox Content="Turn 'Show reminders and Incoming VOIP calls on the lock screen' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxSystemNotificationsShowRemindersAndIncomingVOIPCallsOnTheLockScreen}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                <CheckBox Content="Remove Notifications and Action Center - Policy" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxSystemNotificationsRemoveNotificationsAndActionCenter}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                            </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                <Border Name="SystemPowerBattery_Border" BorderThickness="1" BorderBrush="Lime" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="4">
                                    <StackPanel Name="SystemPowerBatterye_Header" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Label Name="SystemPowerBattery_Label" Content="Power and Battery" HorizontalContentAlignment="Center" Foreground="Lime" Background="#190533" FontWeight="Bold" BorderThickness="1"/>
                                            <StackPanel Name="SystemPowerBattery_Content" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="Auto" Margin="5">
                                                <StackPanel Margin="5">
                                                <CheckBox Content="On battery power, turn off my screen after - Never." Foreground="Lime"  Margin="5" IsChecked="{Binding ChckbxSystemPowerScreenAndSleepOnBatteryPowerTurnOffScreenAfter}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                <CheckBox Content="When plugged in, turn off my screen after - Never" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxSystemPowerScreenAndSleepWhenPluggedInTurnOffMyScreenAfter}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                <CheckBox Content="On battery power, put my device to sleep after - Never" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxSystemPowerScreenAndSleepOnBatteryPowerPutMyDeviceToSleepAfter}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                <CheckBox Content="When plugged in, put my device to sleep after - Never" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxSystemPowerScreenAndSleepWhenPluggedInPutMyDeviceToSleepAfter}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                <CheckBox Content="Optimize your device based on power use and performance - High Performance" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxSystemPowerModeOptimizeYourDeviceBasedOnPowerUseAndPerformance}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                <Border Name="SystemStorage_Border" BorderThickness="1" BorderBrush="Lime" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="4">
                                    <StackPanel Name="SystemStorage_Header" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Label Name="SystemStorage_Label" Content="Storage" HorizontalContentAlignment="Center" Foreground="Lime" Background="#190533" FontWeight="Bold" BorderThickness="1"/>
                                        <StackPanel Name="SystemStorage_Content" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="Auto" Margin="5">
                                                <StackPanel Margin="5">
                                                <CheckBox Content="Turn 'Storage Sense' - Off" Foreground="Lime"  Margin="5" IsChecked="{Binding ChckbxSystemStorageStorageSense}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                <Border Name="SystemRemoteDesktop_Border" BorderThickness="1" BorderBrush="Lime" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="4">
                                    <StackPanel Name="SystemRemoteDesktop_Header" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Label Name="SystemRemoteDesktop_Label" Content="Remote Desktop" HorizontalContentAlignment="Center" Foreground="Lime" Background="#190533" FontWeight="Bold" BorderThickness="1"/>
                                        <StackPanel Name="SystemRemoteDesktop_Content" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="Auto" Margin="5">
                                                <StackPanel Margin="5">
                                                <CheckBox Content="Turn 'Remote Desktop' - Off" Foreground="Lime"  Margin="5" IsChecked="{Binding ChckbxSystemRemoteDesktop}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                            </WrapPanel>
                            </Border>
                        </TabItem.Content>
                    </TabItem>

                    <!--#endregion-->

<!--#region Tab: Bluetooth & Devices -->

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" >
                            <Image Source="/Resources/Icons/Bluetooth_Icon.png" Height="20" Width="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Bluetooth and Devices" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>

                    <TabItem.Content>
                        <Border BorderBrush="#00FF00" BorderThickness="0,0,0,0">
                            <WrapPanel Name="BluetoothAndDevices_Content" VerticalAlignment="Center" HorizontalAlignment="Center" >

                                <Border Name="BluetoothAndDevicesAutoplay_Border" BorderThickness="1" BorderBrush="Lime" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="4">
                                    <StackPanel Name="BluetoothAndDevicesAutoplay_Header" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Label Name="BluetoothAndDevicesAutoplay_Label" Content="Autoplay" HorizontalContentAlignment="Center" Foreground="Lime" Background="#190533" FontWeight="Bold" BorderThickness="1"/>
                                        <StackPanel Name="BluetoothAndDevicesAutoplay_Content" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="Auto" Margin="5">
                                            <StackPanel Margin="5">
                                                <CheckBox Content="Turn 'Use Autoplay for all media and devices' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxBluetoothAndDevicesAutoplay}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                
                                                
                                                
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                            </WrapPanel>
                        </Border>
                    </TabItem.Content>
                </TabItem>

                <!--#endregion-->
                    
<!--#region Tab: Network and Internet -->

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" >
                            <Image Source="/Resources/Icons/NetworkAndInternet_Icon.png" Height="20" Width="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Network and Internet" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>

                    <TabItem.Content>
                        <Border BorderBrush="#00FF00" BorderThickness="0,0,0,0">
                            <WrapPanel Name="NetworkAndInternet_Content" VerticalAlignment="Center" HorizontalAlignment="Center">

                                <Border Name="NetworkAndInternetAdvancedSharingSettings_Border" BorderThickness="1" BorderBrush="Lime" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="4">
                                    <StackPanel Name="NetworkAndInternetAdvancedSharingSettings_Header" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Label Name="NetworkAndInternetAdvancedSharingSettings_Label" Content="Advanced Sharing Settings" HorizontalContentAlignment="Center" Foreground="Lime" Background="#190533" FontWeight="Bold" BorderThickness="1"/>
                                        <StackPanel Name="NetworkAndInternetAdvancedSharingSettings_Content" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="Auto" Margin="5">
                                            <StackPanel Margin="5">
                                                <CheckBox Content="Turn 'Your PC can find and be found by other devices on the network' - On" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxNetworkAndInternetAdvancedSharingSettingsNetworkDiscovery}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                <CheckBox Content="Turn 'Allow others on the network to acces shared files and printers on this device' - On" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxNetworkAndInternetAdvancedSharingSettingsFileAndPrinterSharing}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                            </WrapPanel>
                        </Border>
                    </TabItem.Content>
                </TabItem>

                <!--#endregion-->

<!--#region Tab: Personalization -->

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" >
                            <Image Source="/Resources/Icons/Personalization_Icon.png" Height="20" Width="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Personalization" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>

                    <TabItem.Content>
                        <Border BorderBrush="#00FF00" BorderThickness="0,0,0,0">
                            <WrapPanel Name="Personalization_Content" VerticalAlignment="Center" HorizontalAlignment="Center">

                                <Border x:Name="Colors_Border" BorderThickness="1" BorderBrush="Lime" Margin="10" CornerRadius="4">
                                    <StackPanel x:Name="Colors" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" >
                                        <Label x:Name="ColorsLabel" Content="Colors" HorizontalContentAlignment="Center" Foreground="Lime" Background="#190533" FontWeight="Bold" BorderThickness="1"/>
                                        <StackPanel x:Name="ColorsPanel_1" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="Auto" Margin="5">
                                            <GroupBox Header="Set Taskbar and Startmenu to" Foreground="Lime" Margin="5">
                                                <StackPanel Margin="5">
                                                    <RadioButton Content="Light Theme" Foreground="White" Command="{Binding RbtnTaskbarLight, Mode=OneWay}"/>
                                                    <RadioButton Content="Dark Theme" Foreground="DarkGray" Command="{Binding RbtnTaskbarDark, Mode=OneWay}"/>
                                                </StackPanel>
                                            </GroupBox>
                                            <GroupBox Header="Set Apps to" Foreground="Lime" Margin="5">
                                                <StackPanel Margin="5">
                                                    <RadioButton Content="Light Theme" Foreground="White" Command="{Binding RbtnAppsLight, Mode=OneWay}"/>
                                                    <RadioButton Content="Dark Theme" Foreground="DarkGray" Command="{Binding RbtnAppsDark, Mode=OneWay}"/>
                                                </StackPanel>
                                            </GroupBox>
                                            <GroupBox Header="Effects" Foreground="Lime" Margin="5">
                                                <StackPanel Margin="5">
                                                    <CheckBox Content="Turn 'Transparency Effects' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationColorsTransparancyEffects}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    <CheckBox Content="Show accent color on Start and taskbar" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationColorsShowAccentColorOnStartAndTaskbar}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    <CheckBox Content="Show accent color on title bars and windows borders" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationsColorsShowAccentColorOnTitleBarsAndWindowsBorders}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                </StackPanel>
                                            </GroupBox>
                                        </StackPanel>

                                        <StackPanel x:Name="ColorsPanel_2" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" >
                                            <StackPanel x:Name="ChangeAccentColorButton" Margin="5,5,157,5" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <Button x:Name="BtnChangeAccentColor" Content="Change Accent Color" FontSize="13" FontWeight="Bold" Command="{Binding BtnChangeAccentColor}"/>
                                            </StackPanel>
                                            
                                            <Grid x:Name="ChangePcName" Height="40" Width="180">
                                                <TextBox x:Name="NewPcNameBox" Text="{Binding ChangedPcName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource ChangePcNameBoxStyle}"/>
                                                <TextBlock Text="Type New PC Name" Style="{StaticResource ChangePcNameTextStyle}"/>
                                            </Grid>

                                            <StackPanel x:Name="ChangePcNameButton" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <Button x:Name="BtnChangePcName" Content="Change PC Name" FontSize="13" FontWeight="Bold" Command="{Binding BtnChangePcName}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>


                                <Border x:Name="Start_Border" BorderThickness="1" BorderBrush="Lime" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="4">
                                    <StackPanel x:Name="Start_Content" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">

                                        <Label x:Name="Start_Label" Content="Start" HorizontalContentAlignment="Center" Foreground="Lime" Background="#190533" FontWeight="Bold" BorderThickness="1"/>
                                        <StackPanel x:Name="Start_Header" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="Auto" Margin="5">

                                            <GroupBox Header="Disable in 'Start'" Foreground="Lime" Margin="5">
                                                <StackPanel Margin="5">
                                                    <CheckBox Content="Turn 'Show recently added apps' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationStartShowRecentlyAddedApps}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    <CheckBox Content="Turn 'Show most used apps' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationStartShowMostUsedApps}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    <CheckBox Content="Turn 'Show recently opened items in Start, Jump Lists and File Explorer' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationStartShowRecentlyOpenedItemsInJumpList}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    <CheckBox Content="Turn 'Recommended' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationStartRecommended}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    <CheckBox Content="Remove all Pinned Apps and load defaults" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationStartRemoveAllPinnedLoadDefaults}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                </StackPanel>
                                            </GroupBox>

                                        </StackPanel>
                                    </StackPanel>
                                </Border>


                                <Border x:Name="Taskbar_Border" BorderThickness="1" BorderBrush="Lime" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="4">
                                    <StackPanel x:Name="Taskbar" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Label x:Name="Taskbar_Label" Content="Taskbar" HorizontalContentAlignment="Center" Foreground="Lime" Background="#190533" FontWeight="Bold" BorderThickness="1"/>
                                        <StackPanel x:Name="Taskbar_Panel" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="Auto" Margin="5">

                                            <GroupBox Header="Hide 'Taskbar Items'" Foreground="Lime" Margin="5">
                                                <StackPanel Margin="5">
                                                    <CheckBox Content="Search" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationTaskbarHideSearch}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    <CheckBox Content="Task View" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationTaskbarHideTaskView}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    <CheckBox Content="Widgets" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationTaskbarHideWidgets}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    <CheckBox Content="Chat" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationTaskbarHideChat}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    
                                                    
                                                </StackPanel>
                                            </GroupBox>

                                            <GroupBox Header="Hide 'System Tray Icons'" Foreground="Lime" Margin="5">
                                                <StackPanel Margin="5">
                                                    <CheckBox Content="Pen Menu" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationTaskbarHidePenMenu}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    <CheckBox Content="Touch Keyboard" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationTaskbarHideTouchKeyboard}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    <CheckBox Content="Virtual Touchpad" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationTaskbarHideVirtualTouchpad}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                </StackPanel>
                                            </GroupBox>

                                            <GroupBox Header="Taskbar Behaviors" Foreground="Lime" Margin="5">
                                                <StackPanel Margin="5">
                                                    <CheckBox Content="Taskbar Alignment - Left" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationTaskbarBehaviorsTaskbarAlignment}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    <CheckBox Content="Clear All Taskbar Items" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPersonalizationTaskbarClearAll}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                </StackPanel>
                                            </GroupBox>

                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                            </WrapPanel>
                        </Border>
                    </TabItem.Content>
                </TabItem>

                <!--#endregion-->

<!--#region Tab: Apps-->

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" >
                            <Image Source="/Resources/Icons/Apps_Icon.png" Height="20" Width="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Apps" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>

                    <TabItem.Content>
                        <Border BorderBrush="#00FF00" BorderThickness="0,0,0,0">
                            <WrapPanel Name="AppsOfflineMaps_Content" VerticalAlignment="Center" HorizontalAlignment="Center">

                                <Border Name="AppsOfflineMaps_Border" BorderThickness="1" BorderBrush="Lime" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="4">
                                    <StackPanel Name="AppsOfflineMaps_Header" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Label Name="AppsOfflineMaps_Label" Content="Offline Maps" HorizontalContentAlignment="Center" Foreground="Lime" Background="#190533" FontWeight="Bold" BorderThickness="1"/>
                                        <StackPanel Name="AppsOfflineMaps_Panel" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="Auto" Margin="5">
                                            <StackPanel Margin="5">
                                                <CheckBox Content="Turn 'Update automatically when plugged in and on Wi-Fi' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxAppsOfflineMapsUpdateAutomaticallyWhenPluggedInAndOnWifi}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                            </WrapPanel>
                        </Border>
                    </TabItem.Content>
                </TabItem>

                <!--#endregion-->

<!--#region Tab: Gaming-->

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" >
                            <Image Source="/Resources/Icons/Gaming_Icon.png" Height="20" Width="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Gaming" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>

                    <TabItem.Content>
                        <Border BorderBrush="#00FF00" BorderThickness="0,0,0,0">
                            <WrapPanel Name="GamingCaptures_Content" VerticalAlignment="Center" HorizontalAlignment="Center">

                                <Border Name="GamingCaptures_Border" BorderThickness="1" BorderBrush="Lime" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="4">
                                    <StackPanel Name="GamingCaptures_Header" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Label Name="GamingCaptures_Label" Content="Captures" HorizontalContentAlignment="Center" Foreground="Lime" Background="#190533" FontWeight="Bold" BorderThickness="1"/>
                                        <StackPanel Name="GamingCaptures_Panel" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="Auto" Margin="5">
                                            <StackPanel Margin="5">
                                                <CheckBox Content="Turn 'When something cool happened in your game, press Windows logo key + Alt + G to capture the moment' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxGamingCapturesWhenSomethingCoolHappenedInYourGame}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                            </WrapPanel>
                        </Border>
                    </TabItem.Content>
                </TabItem>

                <!--#endregion-->
                    
<!--#region Tab: Privacy and Security-->

                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" >
                            <Image Source="/Resources/Icons/PrivacyAndSecurity_Icon.png" Height="20" Width="20" Margin="0,0,5,0"/>
                            <TextBlock Text="Privacy and Security" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>

                    <TabItem.Content>

                        <Border BorderBrush="#00FF00" BorderThickness="0,0,0,0">
                            <StackPanel Name="PrivacyAndSecurityGeneral_Content" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">

                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                                        <Border Name="PrivacyAndSecurityForDevelopers_Border" BorderThickness="1" BorderBrush="Lime" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="4">
                                            <StackPanel Name="PrivacyAndSecurityForDevelopers_Header" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Label Name="PrivacyAndSecurityForDevelopers_Label" Content="For Developers" HorizontalContentAlignment="Center" Foreground="Lime" Background="#190533" FontWeight="Bold" BorderThickness="1"/>
                                                <StackPanel Name="PrivacyAndSecurityForDevelopers_Panel" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="Auto" Margin="5">
                                                    <StackPanel Margin="5">
                                                        <CheckBox Content="Set 'Terminal' to 'Windows Terminal'" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPrivacyAndSecurityForDevelopersSetTerminal}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>

                                        <Border Name="PrivacyAndSecurityGeneral_Border" BorderThickness="1" BorderBrush="Lime" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="4">
                                        <StackPanel Name="PrivacyAndSecurityGeneral_Header" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Label Name="PrivacyAndSecurityGeneral_Label" Content="General" HorizontalContentAlignment="Center" Foreground="Lime" Background="#190533" FontWeight="Bold" BorderThickness="1"/>
                                            <StackPanel Name="PrivacyAndSecurityGeneral_Panel" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="Auto" Margin="5">
                                                <StackPanel Margin="5">
                                                    <CheckBox Content="Turn 'Let websites show me locally relevant content by accessing my language List' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPrivacyAndSecurityGeneralLetWebsitesShowMeLocallyRelevantContentByAccessingMyLanguageList}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    <CheckBox Content="Turn 'Let Windows improve Start and search results by tracking app launches' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPrivacyAndSecurityGeneralLetWindowsImproveStartAndSearchResultsByTrackingAppLaunches}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                    <CheckBox Content="Turn 'Show me suggested content in the Settings app' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPrivacyAndSecurityGeneralShowMeSuggestedContentInTheSettingsApp}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <Border Name="PrivacyAndSecurityInkingAndTypingPersonalization_Border" BorderThickness="1" BorderBrush="Lime" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="4">
                                        <StackPanel Name="PrivacyAndSecurityInkingAndTypingPersonalization_Header" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Label Name="PrivacyAndSecurityInkingAndTypingPersonalization_Label" Content="Inking and Typing Personalization" HorizontalContentAlignment="Center" Foreground="Lime" Background="#190533" FontWeight="Bold" BorderThickness="1"/>
                                            <StackPanel Name="PrivacyAndSecurityInkingAndTypingPersonalization_Panel" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="Auto" Margin="5">
                                                <StackPanel Margin="5">
                                                    <CheckBox Content="Turn 'Personal Inking and Typing Dictionary' - Off" Foreground="Lime" Margin="5" IsChecked="{Binding ChckbxPrivacyAndSecurityInkingAndTypeingPersonalizationPersonalInkingAndTypingDictionary}" Style="{StaticResource GeneralCheckboxStyle}"/>
                                                </StackPanel>
